<% include ./partials/header %>




<section class="pb_cover_v3 overflow-hidden cover-bg-indigo cover-bg-opacity text-left pb_gradient_v1 pb_slant-light" id="section-home">
    <div class="container">
      <div class="row align-items-center justify-content-center">
        <div class="col-md-6">
          <h2 class="heading mb-3">Writers With Experience</h2>
          <div class="sub-heading">
            <p class="mb-4">Discover the right mentors with years of experience. For more infomation visit the <a href="#" target="_blank">site</a>. Different topics that are written by experienced achievers.</p>
            <p class="mb-5"><a class="btn btn-success btn-lg pb_btn-pill smoothscroll" href="#section-pricing"><span class="pb_font-14 text-uppercase pb_letter-spacing-1">See Pricing</span></a></p>
          </div>
        </div>
        <div class="col-md-1">
        </div>
        <div class="col-md-5 relative align-self-center">
                <div style="margin: 1rem auto;" class="container">

                        <% errors.forEach((err) => { %>
                            <div class="alert alert-danger" role="alert">
                                <%= error %>
                            </div>
                        <% }) %>
                        <% infos.forEach((info) => { %>
                            <div class="alert alert-info" role="alert">
                                <%= info %>
                            </div>
                        <% }) %>
                </div>
          <form action="/signup" method="POST" class="bg-white rounded pb_form_v1">
            <h2 class="mb-4 mt-0 text-center">Sign Up for Free</h2>
            <div class="form-group">
              <input type="text" class="form-control pb_height-50 reverse" placeholder="Username" required autofocus>
            </div>
            <div class="form-group">
              <input type="password" class="form-control pb_height-50 reverse" placeholder="Password" required>
            </div>
            <div class="form-group">
              <input type="submit" class="btn btn-primary btn-lg btn-block pb_btn-pill  btn-shadow-blue" value="Register">
            </div>
          </form>

        </div>
      </div>
    </div>
  </section>
  <!-- END section -->


<% include ./partials/footer %>